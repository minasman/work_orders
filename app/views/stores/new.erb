<% if flash.has?(:message) %>
    <h1 class="my-alert"><%= flash[:message] %></h1>
<% end %><br>
<h2>Add New Store</h2>
<form method="post" action="/stores">
    <div class="form-group">
        <label>Restaurant Number: </label>
            <input class="form-control" type="text" name="store[store_number]" required>
    <div>
    <div class="form-group">
        <label>Restaurant Name: </label>
            <input type="text" class="form-control" name="store[name]" required>
    </div>
    <div class="form-group">
        <label>Restaurant Email: </label>
            <input type="email" class="form-control" name="store[email]" required>
    </div>
    <button type="submit" class="btn btn-dark">Submit</button>
</form>