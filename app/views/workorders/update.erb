<h2><%= @workorder.store_number %></h2>
<p>Submitted on: <%= @workorder.date %> By: <%= @workorder.user[:username] %> At: <%= @workorder.time %></p> 
<p>Issue: <%= @workorder.issue %>
<br>
<% if @workorder.current_update_id %>
    <h3>Updates:</h3>
    <% @workorder.current_update_id.each do |info| %>
        <p><%= info[:date] %> - <%= info[:time] %> Entered By: <%= info[:username] %> : Update => <%= info[:notes] %></p>
        <br>
    <% end %>
<% end %>
<br>
<form method="post" action="/workorders/<%= @workorder.id %>">
    <label>Date: </label>
        <input type="date" name="current_update[date]"><br>
    <label>Time: </label>
        <input type="time" name="current_update[time]"><br>
    <label>Update: </label><br>
        <textarea name="current_update[notes]" rows="10" columns="100"></textarea><br>
    <input type="submit" value="Update Work Order">
</form>


