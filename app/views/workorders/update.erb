<h2>Update Work Order # <%= @workorder.id %> for Restaurant <%= @workorder.store_number %></h2>
<p>Submitted on: <%= @workorder.date %> By: <%= @workorder.user[:username] %> At: <%= @workorder.time %></p> 
<p>Issue: <%= @workorder.issue %>
<br>
<% if !@workorder.current_updates.empty? %>
    <h3>Updates:</h3>
    <% @workorder.current_updates.each do |info| %>
        <p><%= info[:date] %> - <%= info[:time] %> Entered By: <%= info[:username] %> : Update => <%= info[:notes] %></p>
        <br>
    <% end %>
<% end %>
<br>
<form method="post" action="/workorders/<%= @workorder.id %>">
    <label>Update: </label><br>
        <textarea name="current_update[notes]" rows="10" columns="100" required></textarea><br>
    <label>Close Work Order? </label><input type="checkbox" name="status" value="closed">
    <input type="submit" value="Update Work Order">
</form>


