<h1>Edit Work Order:</h1>
<form action="/workorders/<%= @workorder.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <div class="form-group">
        <label>Restaurant Number: </label>
            <input type="text" name=work_order[store_number] class="form-control" value="<%= @workorder.store_number %>" required>
    </div>
    <div class="form-group">
        <label>Issue: </label>
            <textarea name=work_order[issue] class="form-control" required><%= @workorder.issue %></textarea>
    </div>
    <button type="submit" class="btn btn-dark">Submit Edit</button>
</form>

